{
    "name": "delma-resource-calculator-core",
    "version": "1.0.2",
    "author": "Anton Neporotovskiy",
    "license": "MIT",
    "main": "build/build.js",
    "scripts": {
        "clear": "rimraf cache build",
        "start:webpack": "webpack --mode=production --watch",
        "start:nodemon": "nodemon --watch build/index.js --exec \"node build/index.js\"",
        "build": "yarn clear && webpack --mode=production"
    },
    "devDependencies": {
        "@babel/core": "^7.1.6",
        "@babel/preset-env": "^7.1.6",
        "babel-loader": "^8.0.4",
        "nodemon": "^1.18.9",
        "prettier": "^1.15.2",
        "rimraf": "^2.6.3",
        "uglifyjs-webpack-plugin": "^2.0.1",
        "webpack": "^4.26.0",
        "webpack-cli": "^3.1.2"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "all",
        "bracketSpacing": true,
        "printWidth": 120,
        "singleQuote": true,
        "semi": true
    }
}
